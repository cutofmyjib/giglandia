<div data-role="content" class="content">
  <h1>Sign In</h1>
  <% if @errors %>
    <div role="alert">
      <em>Error:</em>
      Please enter email address and password correctly.
    </div>
  <% end %>

  <form method="post" action="/sessions">
    <div class="form-group">
      <label for="email">Email
      </label>
      <div>
        <input type="email" class="form-control" name="session[email]" placeholder="me@example.com">
      </div>
    </div>
    <div class="form-group">
      <label for="password"> Password</label>
      <div>
        <input type="password" name="session[password]" placeholder="6 or more characters">
      </div>
    </div>
    <div>
      <div>
        <button type="submit">Sign in</button>
      </div>
    </div>
  </form>
</div>


